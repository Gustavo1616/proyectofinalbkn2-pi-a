<main class="d-flex flex-column" style=" flex-direction: column; flex-wrap: nowrap; align-items:center;">
    <h1 class="text-success mb-4 text-center">Carrito de Compras</h1>
    {{#if carts.length}}
    <div class="row justify-content-center">
        {{#each carts}}
        <div class="col-12 col-sm-6 col-md-4 mb-3">
            <div class="card h-100">
                <img src="{{this.product_id.photo}}" class="card-img-top" alt="{{this.product_id.title}}"
                    style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">{{this.product_id.title}}</h5>
                    <p class="card-text">Precio: ${{this.product_id.price}}</p>
                    <p class="card-text">Cantidad: {{this.quantity}}</p>
                    <p class="card-text">Subtotal: ${{this.subtotal}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <hr class="my-4">
    <h3 class="text-center">Total a pagar: ${{total}}</h3>
    {{else}}
    <p class="alert alert-warning text-center">Tu carrito está vacío.</p>
    {{/if}}
</main>
<script src="/scripts/cart.js"></script>